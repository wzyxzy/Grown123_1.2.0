<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_change_tea"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/job_03"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:gravity="left|center_vertical"
            android:onClick="btnBack"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/login_return"
                android:textColor="#ffffff"
                android:textSize="18dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="更换老师"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:onClick="onSaveClick"
            android:clickable="true"
        >

            <Button
                android:id="@+id/btn_header_right"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_login_shape"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:clickable="false"
            />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="248.33dp"
        android:layout_height="38.67dp"
        android:background="@drawable/sjikuang"
        android:orientation="horizontal"
        android:layout_marginTop="39dp"
    >

        <EditText
            android:id="@+id/et_phone1"
            android:layout_width="match_parent"
            android:layout_height="38.67dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:hint="   手机号"
            android:textSize="12.03sp" />
    </LinearLayout>
</LinearLayout>
