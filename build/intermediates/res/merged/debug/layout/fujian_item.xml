<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" 
    >

    <RelativeLayout
        android:id="@+id/rl_fujian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp" 
        android:paddingBottom="10dp"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/iv_fujian"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dont"
            android:focusable="false"
            android:scaleType="fitXY" 
            />

        <TextView
            android:id="@+id/tv_baifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#b5b5b5"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_fujian"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_point_fujian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_fujian"
                android:layout_gravity="center"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/point_little" />

            <TextView
                android:id="@+id/tv_fujian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_fujian"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="#b5b5b5"
                android:textSize="12sp" 
                android:ellipsize="middle"
                android:maxEms="5"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_fujian"
            android:layout_alignTop="@+id/iv_fujian"
            android:background="@drawable/biao" />

    </RelativeLayout>

</LinearLayout>