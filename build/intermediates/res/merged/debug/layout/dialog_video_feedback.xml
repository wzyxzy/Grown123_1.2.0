<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="50dp"
              android:gravity="center_horizontal|bottom">

    <LinearLayout
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/green"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="您的支持是我们最大的动力"
                android:textColor="@color/white"
                android:textSize="14sp"

            />


            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/close"
                android:clickable="false"
            />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_kuang"
            android:minHeight="133dp"
            android:orientation="vertical"
            android:padding="10dp"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="3dp"
                          android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="请您评价："
                    android:textColor="@color/dingyue_text"
                    android:textSize="14sp"/>
                <com.pndoo.grown123_new.view.MyRatingBar
                    android:id="@+id/rb"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:starCount="5"
                    app:starEmpty="@drawable/star_2"
                    app:starFill="@drawable/star_1"
                    app:starImageSize="18dp"
                    app:starPadding="30dp"
                    app:starStep="5"
                    app:stepSize="Full">
                </com.pndoo.grown123_new.view.MyRatingBar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="您的建议："
                    android:textColor="@color/dingyue_text"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_backfeed_kuang"
                    android:gravity="start"
                    android:lineSpacingExtra="6dp"
                    android:minHeight="40dp"
                    android:padding="3dp"
                    android:text=""
                    android:textColor="@color/dingyue_text"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="Tips："
                    android:textColor="@color/dingyue_text"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="6dp"
                        android:text="给课程打分吧！"
                        android:textColor="@color/dingyue_text"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="6dp"
                        android:text="我们会奉上精美礼物至孩子幼儿园"
                        android:textColor="@color/dingyue_text"
                        android:textSize="14sp"
                    android:layout_marginTop="3dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/save_kuang"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="@string/tijiao"
                    android:textColor="@color/background"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/fenge_line">
                </ImageView>

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="退出"
                    android:textColor="@color/background"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
