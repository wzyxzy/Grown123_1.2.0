<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/activity_my_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23.33dp"
                android:layout_marginLeft="23.33dp"
                android:layout_marginTop="23.33dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_splash"
                    android:layout_width="90dp"
                    android:layout_height="123.33dp"
                    android:background="@drawable/cover_normal"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="23.33dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_bookname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网事在心"
                        android:singleLine="true"
                        android:textColor="@color/text_black"
                        android:textSize="19sp" />

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="简介"
                            android:textColor="@color/text_grey"
                            android:textSize="15.00sp" />

                        <TextView
                            android:id="@+id/tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_marginRight="10dp"
                            android:text="用于3d,分别为Android和ios"
                            android:textColor="@color/text_grey"
                            android:textSize="15.00sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京交通大学出版社"
                        android:textColor="@color/text_grey"
                        android:textSize="15.00sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/search_book_icon" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="285.00dp"
                android:layout_height="38.67dp"
                android:layout_gravity="center"
                android:layout_marginTop="23.33dp"
                android:background="@drawable/search_box" >

                <TextView
                    android:id="@+id/tv_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ktou"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:onClick="space"
                    android:text="图"
                    android:textSize="15.94sp"
                    android:textColor="@color/white"
                     />

                

                <EditText
                    android:id="@+id/et_input"
                    android:layout_width="match_parent"
                    android:layout_height="45.33dp"
                    android:layout_toRightOf="@id/tv_photo"
                    android:background="@null"
                    android:hint="  在此输入图书编号"
                    android:textSize="17sp"
                     />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="23.33dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
               android:layout_marginTop="23.33dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/one"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                        android:text="1"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp"
                     
                        />

                    <Button
                        android:id="@+id/two"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                        android:layout_marginLeft="23.33dp"
                        android:text="2"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/three"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                        android:layout_marginLeft="23.33dp"
                          android:text="3"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/four"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                        android:layout_marginLeft="23.33dp"
                          android:text="4"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="23.33dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/five"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                          android:text="5"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/six"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                        android:layout_marginLeft="23.33dp"
                         android:text="6"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/seven"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                        android:layout_marginLeft="23.33dp"
                          android:text="7"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/eight"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                        android:layout_marginLeft="23.33dp"
                          android:text="8"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="23.33dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/nine"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                          android:text="9"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/zero"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                        android:layout_marginLeft="23.33dp"
                         android:text="0"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/dian"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                        android:layout_marginLeft="23.33dp"
                        android:background="@drawable/search_shape" />

                    <Button
                        android:id="@+id/english"
                        android:layout_width="47.67dp"
                        android:layout_height="47.67dp"
                        android:layout_marginLeft="23.33dp"
                          android:text="英"
                        android:background="@drawable/circle_shape" 
                        android:textColor="@color/grey01"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="23.33dp"
                   android:layout_marginBottom="53.67dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/delete"
                        android:layout_width="114dp"
                        android:layout_height="34.67dp"
                        android:background="@drawable/search_btn_cancel"
                        android:text="后退"
                        android:textColor="@color/white"
                         />

                    <Button
                        android:id="@+id/confirm"
                        android:layout_width="114dp"
                        android:layout_height="34.67dp"
                        android:layout_marginLeft="32.67dp"
                        android:background="@drawable/search_btn_confirm"
                        android:text="确认"
                         android:textColor="@color/white"
                         />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>