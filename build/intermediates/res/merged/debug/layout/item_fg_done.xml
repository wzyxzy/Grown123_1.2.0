<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="13dp"
>

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@color/background"/>
    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/imageView16"
        android:text="孩子"
        android:textColor="@color/background"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageView16"
        android:textColor="@color/zhibo_black2"
        android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextView"
    />

    <com.pndoo.grown123_new.view.GridViewForScrollView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView29"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageView16"
        android:cacheColorHint="@color/transparent"
        android:horizontalSpacing="3dp"
        android:listSelector="@android:color/transparent"
        android:minHeight="1dp"
        android:numColumns="3"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:verticalSpacing="3dp"
    >
    </com.pndoo.grown123_new.view.GridViewForScrollView>
    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@+id/imageView16"
        android:src="@drawable/release_03"
    />
    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imageView17"
        android:text="2017/7/8 14:55"
        android:textSize="11sp"
        android:textColor="@color/zhibo_black2"/>

    <LinearLayout
        android:id="@+id/pinglun"
        android:layout_width="31dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gridView"
        android:layout_marginRight="14dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/release_04"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
    >

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/release_06"
        />
        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="11sp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dianzan"
        android:layout_width="31dp"
        android:layout_height="20dp"
        android:layout_below="@+id/gridView"
        android:layout_marginRight="14dp"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@+id/pinglun"
        android:background="@drawable/release_05"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
    >

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/release_07"
        />
        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="11sp"
        />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_pai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridView"
        android:layout_marginRight="14dp"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@+id/dianzan"
        android:background="@drawable/m_gold"
    />
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gridView"
        android:layout_marginTop="48dp"
        android:background="@drawable/release_121"
        android:orientation="vertical"
    >

        <LinearLayout
            android:id="@+id/layout_zan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/release_09"
            />
            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="TextView"
                android:textColor="@color/background"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
        >
            <LinearLayout
                android:id="@+id/devider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cdcdcd"
                android:orientation="horizontal">
            </LinearLayout>
            <com.pndoo.grown123_new.view.ListViewForScrollView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/transparent"
                android:dividerHeight="5dp"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/devider_all"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout"
        android:layout_marginTop="13dp"
        android:background="@color/bg_grey"
        android:orientation="horizontal"
    >
    </LinearLayout>
</RelativeLayout>